<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CommTab2Activity">

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/common_tab"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#ffffff"
            app:tl_indicator_color="@color/colorPrimaryDark"
            app:tl_indicator_corner_radius="5dp"
            app:tl_indicator_height="3dp"
            app:tl_indicator_width="11dp"
            app:tl_tab_padding="15dp"
            app:tl_textBold="SELECT"
            app:tl_tab_space_equal="false"
            app:tl_textSelectColor="#323232"
            app:tl_textUnselectColor="#323232"
            app:tl_textsize="12dp"
            app:tl_textSelectSize="16dp"
            />
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontal" />
</RelativeLayout>